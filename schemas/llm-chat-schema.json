{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "request": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string",
          "enum": ["run", "step", "rerun", "restep"]
        },
        "job_id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "options": {
          "type": "object",
          "properties": {
            "resume": {"type": "boolean"},
            "model": {"type": "string"},
            "clean_git": {"type": "boolean"},
            "keep_files": {"type": "boolean"}
          },
          "additionalProperties": false
        }
      },
      "required": ["action", "job_id"],
      "additionalProperties": false
    },
    "response": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string",
          "enum": ["COMPLETED", "STUCK", "RETRY"]
        },
        "evidence_files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "summary_for_supervisor": {
          "type": "string",
          "maxLength": 1000
        },
        "job_manifest_url": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["action", "evidence_files", "summary_for_supervisor"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "anyOf": [
    {"required": ["request"]},
    {"required": ["response"]}
  ]
}